@using Bug_Tracker.ViewModels
@model MyTicketViewModel

@{
    ViewBag.Title = "ViewTicket";
    Layout = "~/Views/Shared/_MainLayoutPartialView.cshtml";
}


<link rel="stylesheet" href="~/Content/CSS/TicketDetails.css" />

<div class="row">
    <div class="header">
        <div class="text">
            DETALJI LISTIĆA #@Model.listićID
        </div>
    </div>

    <div class="leftColumn" id="left">
        <div class="name">NAZIV</div>
        <div class="value"> @Model.listićIme</div>
        <div class="name">PRIORITET</div>
        <div class="value"> @Model.nazivPrioritet</div>
        <div class="name"><i class="fa fa-address-card-o"></i>OPIS</div>
        <div class="value">@Model.opisPogreška</div>

    </div>

    <div class="rightColumn" id="right">

        <div class="name">PODNOSITELJ</div>
        <div class="value">@Model.Username</div>
        <div class="name">DATUM</div>
        <div class="value">@Model.datum</div>
        <div class="name">NAZIV PROJEKTA</div>
        <div class="value">@Model.nazivProjekta</div>
        <div class="name">STATUS</div>
        <div class="value">@Model.statusName</div>

    </div>

    <div>
        <img src="@Model.slika"
             alt="slika"
             class="slika" />
    </div>


</div>