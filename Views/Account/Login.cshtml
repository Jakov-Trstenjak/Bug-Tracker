@using Bug_Tracker.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginForm.cshtml";
}

<div class="login100-pic js-tilt" data-tilt>
    <img src="~/Content/Images/BugTrackerFinal.png" alt="IMG">
</div>



@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
{
    @Html.AntiForgeryToken()

    <!-- Form title -->
    <span class="login100-form-title">
        Prijava korisnika
    </span>

    <!-- Email box-->

    <div class="wrap-input100 validate-input" data-validate="Unesite email formata: ex@abc.xyz">
        @Html.TextBoxFor(m => m.Email, new { @class = "input100", @type = "text", @name = "email", @placeholder = "Email" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>

    <!-- Password box -->

    <div class="wrap-input100 validate-input" data-validate="Molimo unesite lozinku">
        @Html.PasswordFor(m => m.Password, new { @class = "input100", @type = "password", @name = "pass", @placeholder = "Password" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>


    <!-- Login button -->
    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            Prijava
        </button>
    </div>

    <!-- Forgot username/password
         Still needs to be enabled.
    -->
    <div class="text-center p-t-12">
        <span class="txt1">
            Zaboravljeno
        </span>
        <a class="txt2" href="#">
            Korisničko ime / Lozinka?
        </a>
    </div>

    <!-- Create account -reddirects to register page -->
    <div class="text-center p-t-136">
        <a class="txt2" href="#">
            @Html.ActionLink("Stvori korisnički račun", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
        </a>
    </div>
    @*//  Enable this once you have account confirmation enabled for password reset functionality
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>*@

}