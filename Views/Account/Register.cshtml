@model Bug_Tracker.Models.RegisterViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_RegisterForm.cshtml";
}

<div class="login100-pic js-tilt" data-tilt>
    <img src="~/Content/Images/Registration3.png" alt="IMG" id="registrationImage">
</div>


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <!-- Form title -->
    <span class="login100-form-title">
       Registracija korisnika
    </span>

    <!-- Username box -->
    <div class="wrap-input100 validate-input" data-validate="Odaberite korisničko ime">
        @Html.TextBoxFor(m => m.Username, new { @class = "input100", @type = "text", @name = "username", @placeholder = "Korisničko ime" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-user-circle" aria-hidden="true"></i>
        </span>
    </div>

    <!-- Password box -->
    <div class="wrap-input100 validate-input" data-validate="Molimo unesite lozinku">
        @Html.PasswordFor(m => m.Password, new { @class = "input100", @type = "password", @name = "pass", @placeholder = "Lozinka" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>



    <div class="wrap-input100 validate-input" data-validate="Ponovo unesite lozinku">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100", @type = "password", @name = "pass", @placeholder = "Potvrdite lozinku" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
    </div>


    <!-- Email box -->
    <div class="wrap-input100 validate-input" data-validate="Molimo unesite ispravan email: ex@abc.xyz">
        @Html.TextBoxFor(m => m.Email, new { @class = "input100", @type = "text", @name = "email", @placeholder = "Email" })
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            Registracija
        </button>
    </div>

    <div class="text-center p-t-136">
        <a class="txt2" href="#">
            @Html.ActionLink("Imate korisnički račun?", "Login", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
        </a>
    </div>
}