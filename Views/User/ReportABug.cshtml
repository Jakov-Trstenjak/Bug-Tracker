@using Bug_Tracker.ViewModels
@model TicketViewModel
@{
    ViewBag.Title = "ReportABug";
    Layout = "~/Views/Shared/_MainLayoutPartialView.cshtml";
}

<link rel="stylesheet" href="~/Content/CSS/ReportABug.css" />

<h2>Report A Bug</h2>


@using (Html.BeginForm("CreateTicket", "User", FormMethod.Post, new { id = "submit" }))
{

    <div class="header">
        <div class="text">
            TICKET
        </div>
    </div>


    <aside class="profile-cardUser">
        <div class="mask-shadowUser" ></div>


        <!-- bit of a bio; who are you? -->
        <div class="column">


            <div class="form-group">
                @Html.LabelFor(m => m.Ticket.TicketTitle)
                @Html.TextBoxFor(m => m.Ticket.TicketTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Ticket.TicketTitle)
            </div>




            <div class="form-group">
                @Html.LabelFor(m => m.Ticket.Bug.PriorityID)
                @Html.DropDownListFor(m => m.Ticket.Bug.PriorityID, new SelectList(Model.Priorities, "PriorityID", "PriorityName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Ticket.Bug.PriorityID)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Ticket.projektID)
                @Html.DropDownListFor(m => m.Ticket.projektID, new SelectList(Model.Projects, "projektID", "nazivProjekta"), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Ticket.projektID)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Ticket.ImageURL)
                @Html.TextBoxFor(m => m.Ticket.ImageURL, new { @class = "form-control" })
            </div>


        </div>

        <div class="column">

            <div class="form-group">
                @Html.LabelFor(m => m.Ticket.Bug.Description)
                @Html.TextAreaFor(m => m.Ticket.Bug.Description, new { @class = "form-control", @id = "description", @placeholder = "Please enter a detailed description of the occured Bug." })
                @Html.ValidationMessageFor(m => m.Ticket.Bug.Description)
            </div>



        </div>


        <div>
            <button type="submit" class="submitButton">Submit</button>
        </div>


    </aside>








    <!-- commnet-->


}

