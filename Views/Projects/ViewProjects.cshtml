
@using Bug_Tracker.ViewModels
@model List<ProjectViewModel>
@{
    ViewBag.Title = "ViewProjects";
    Layout = "~/Views/Shared/_MainLayoutPartialView.cshtml";
}

<h3>Projekti</h3>


<div>
    <table id="myTable" width="1300px">
        <tr id="headerOfTable">
            <th style="width:80px">ID</th>
            <th style="width:300px">NAZIV</th>
            <th style="width:600px">OPIS</th>
            <th style="width:130px">DATUM STVARANJA</th>
            <th style="width:100px">LISTIĆI</th>
        </tr>
        @foreach (var item in Model)
        {
         
            var datum = item.datumPokretanja.Split(' ');
            
            <tr>
                <td>@item.projektID</td>
                <td>@item.nazivProjekta</td>
                <td>@item.opisProjekta</td>
                <td>@datum[0]</td>
                <td>
                    <a href="@Url.Action("allTicketsForProject", "MyTickets",new { id = item.projektID })">
                        <div style="text-align:center">
                            @item.brojListica
                        </div>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
