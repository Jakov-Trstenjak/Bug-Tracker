@model Bug_Tracker.ViewModels.NewTicketViewModel
@{
    ViewBag.Title = "NewTicket";
    Layout = "~/Views/Shared/_MainLayoutPartialView.cshtml";
}

<h2 style="margin-bottom:30px">Report a Bug</h2>


@using (Html.BeginForm("Create", "Ticket"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Ticket.TicketTitle)
        @Html.TextBoxFor(m => m.Ticket.TicketTitle, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Ticket.Description)
        @Html.TextAreaFor(m => m.Ticket.Description, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn-primary">Submit</button>

}

